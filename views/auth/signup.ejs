<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%- include('../includes/error-message.ejs') %>
        <form class="login-form" action="/signup" method="POST" novalidate>
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<%= oldInfo ? oldInfo.name : ''%>"
                class="<%= validationErrors.find(e=> e.param === 'name') ? 'invalid' : ''%>">
            </div>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" value="<%= oldInfo ? oldInfo.email : ''%>"
                class="<%= validationErrors.find(e=> e.param === 'email') ? 'invalid' : ''%>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%= oldInfo ? oldInfo.password : ''%>"
                class="<%= validationErrors.find(e=> e.param === 'password') ? 'invalid' : ''%>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" value="<%= oldInfo ? oldInfo.confirmPassword: ''%>"
                class="<%= validationErrors.find(e=> e.param === 'confirmPassword') ? 'invalid' : ''%>">
            </div>
            <%- include('../includes/csrf-input.ejs') %>
            <button class="btn" type="submit">Sign Up</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>